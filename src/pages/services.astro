---
import Layout from "../layouts/Layout.astro"
import Navbar from "../components/Navbar.astro";
---

<Layout title="Services - PixelPerfect">
    <Navbar />
    <section class="py-20 bg-gradient-to-br from-blue-900 via-blue-800 to-indigo-900 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h1 class="text-4xl md:text-6xl font-bold mb-6">
                Nos <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-cyan-400">Services</span>
