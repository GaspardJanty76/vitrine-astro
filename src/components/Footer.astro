---
const currentYear = new Date().getFullYear();

const services = [
  { name: 'Création de sites web', href: '/services#website' },
  { name: 'Applications web', href: '/services#website' },
  { name: 'E-commerce', href: '/services#website' },
  { name: 'Référencement SEO', href: '/services#website' },
  { name: 'Maintenance', href: '/services#maintenance' }
];


const quickLinks = [
  { name: 'Accueil', href: '/' },
  { name: 'À propos', href: '/about' },
  { name: 'Services', href: '/services' },
  { name: 'Blog', href: '/blog' },
  { name: 'Contact', href: '/contact' }
];

const socialLinks = [
  { name: 'LinkedIn', href: 'https://www.linkedin.com/in/gaspard-janty-841159221/', icon: 'linkedin' },
  { name: 'Twitter', href: 'https://x.com/WestBoySW', icon: 'twitter' },
  { name: 'GitHub', href: 'https://github.com/GaspardJanty76', icon: 'github' },
  { name: 'Instagram', href: 'https://www.instagram.com/westboytcg/', icon: 'instagram' }
];
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8">
      
      <!-- Section principale -->
      <div class="sm:col-span-2 lg:col-span-1 order-1 lg:order-1">
        <div class="mb-6">
          <h3 class="text-xl sm:text-2xl font-bold text-blue-400 mb-3 sm:mb-4">PixelPerfect</h3>
          <p class="text-gray-300 leading-relaxed text-sm sm:text-base">
            Votre partenaire de confiance pour la création de sites web et d'applications modernes. 
            Nous transformons vos idées en expériences digitales exceptionnelles.
          </p>
        </div>
        
        <div class="space-y-2 text-gray-300 text-sm sm:text-base">
          <div class="flex items-center">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-3 text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span class="break-all sm:break-normal">+33 6 95 77 00 24</span>
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-3 text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span class="break-all sm:break-normal">contact@pixelperfect.fr</span>
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-3 text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>Rouen, France</span>
          </div>
        </div>
      </div>

      <!-- Services -->
      <div class="order-2 lg:order-2">
        <h4 class="text-base sm:text-lg font-semibold mb-4 sm:mb-6 text-white">Nos Services</h4>
        <ul class="space-y-2 sm:space-y-3">
          {services.map((service) => (
            <li>
              <a href={service.href} class="text-gray-300 hover:text-blue-400 transition-colors duration-200 flex items-center text-sm sm:text-base">
                <span class="w-1.5 h-1.5 sm:w-2 sm:h-2 bg-blue-400 rounded-full mr-2 sm:mr-3 flex-shrink-0"></span>
                <span class="leading-tight">{service.name}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Navigation -->
      <div class="order-3 lg:order-3">
        <h4 class="text-base sm:text-lg font-semibold mb-4 sm:mb-6 text-white">Navigation</h4>
        <ul class="space-y-2 sm:space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm sm:text-base block">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Newsletter et réseaux sociaux -->
      <div class="sm:col-span-2 lg:col-span-1 order-4 lg:order-4">
        <h4 class="text-base sm:text-lg font-semibold mb-4 sm:mb-6 text-white">Restez connecté</h4>
        <p class="text-gray-300 mb-4 text-sm sm:text-base">Abonnez-vous à notre newsletter pour recevoir nos dernières actualités.</p>
        
        <!-- Newsletter -->
        <div class="mb-6">
          <div class="flex flex-col xs:flex-row gap-2">
            <input 
              type="email" 
              placeholder="Votre email..."
              class="flex-1 px-3 sm:px-4 py-2 bg-gray-800 border border-gray-700 rounded-md xs:rounded-l-md xs:rounded-r-none text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm sm:text-base min-w-0"
            />
            <button class="px-3 sm:px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md xs:rounded-l-none xs:rounded-r-md transition-colors duration-200 flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Réseaux sociaux -->
        <div class="flex flex-wrap gap-3 sm:gap-4 justify-start sm:justify-start">
          {socialLinks.map((social) => (
            <a 
              href={social.href} 
              class="w-9 h-9 sm:w-10 sm:h-10 bg-gray-800 hover:bg-blue-600 rounded-full flex items-center justify-center transition-colors duration-200 flex-shrink-0"
              aria-label={social.name}
            >
              {social.icon === 'linkedin' && (
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"></path>
                </svg>
              )}
              {social.icon === 'twitter' && (
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"></path>
                </svg>
              )}
              {social.icon === 'github' && (
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
                </svg>
              )}
              {social.icon === 'instagram' && (
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 0C7.284 0 6.944.012 5.877.06 2.246.227.227 2.242.061 5.877.012 6.944 0 7.284 0 10s.012 3.057.06 4.123c.167 3.632 2.182 5.65 5.817 5.817C6.944 19.988 7.284 20 10 20s3.057-.012 4.123-.06c3.629-.167 5.652-2.182 5.816-5.817.05-1.066.061-1.407.061-4.123s-.012-3.056-.06-4.122C19.777 2.249 17.76.228 14.124.06 13.057.012 12.716 0 10 0zm0 1.802c2.67 0 2.987.01 4.042.059 2.71.123 3.975 1.409 4.099 4.099.048 1.054.057 1.37.057 4.04 0 2.672-.01 2.988-.057 4.042-.124 2.687-1.387 3.975-4.1 4.099-1.054.048-1.37.058-4.041.058-2.67 0-2.987-.01-4.04-.058-2.717-.124-3.977-1.416-4.1-4.1-.048-1.054-.058-1.37-.058-4.041 0-2.67.01-2.986.058-4.04.124-2.69 1.387-3.977 4.1-4.1 1.054-.048 1.37-.058 4.04-.058zM10 4.865a5.135 5.135 0 100 10.27 5.135 5.135 0 000-10.27zm0 8.468a3.333 3.333 0 110-6.666 3.333 3.333 0 010 6.666zm5.338-9.87a1.2 1.2 0 100 2.4 1.2 1.2 0 000-2.4z" clip-rule="evenodd"></path>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Séparateur et copyright -->
    <div class="border-t border-gray-800 mt-8 sm:mt-12 pt-6 sm:pt-8">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <div class="text-gray-400 text-xs sm:text-sm text-center sm:text-left order-2 sm:order-1">
          © {currentYear} PixelPerfect. Tous droits réservés.
        </div>
        <div class="flex flex-wrap justify-center sm:justify-end gap-4 sm:gap-6 text-xs sm:text-sm order-1 sm:order-2">
          <a href="#" class="text-gray-400 hover:text-white transition-colors duration-200 whitespace-nowrap">
            Mentions légales
          </a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors duration-200 whitespace-nowrap">
            Politique de confidentialité
          </a>
          <a href="#" class="text-gray-400 hover:text-white transition-colors duration-200 whitespace-nowrap">
            CGV
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>